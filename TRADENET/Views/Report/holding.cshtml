                        valNew = $('#txtSearchbyName').val().split("~");
                        Code = valNew[1]
                    }
                    //if ($("#cmbSelect").val() != "ALL") {
                    //    if (Code == '') {
                    //        alert("Please Enter Code");
                    //        $('#txtSearchbyName').focus();
                    //        return false;
                    //    }
                    //}
                    $('#divReportPanelBody').html('');
                    $('#divReportPanel').hide();

                    $('.ledgerbody').hide();

                    var DT = $("#dateBulk").val();

                    var ledgerBalDate = $("#ledgerBalDate").val();

                    var CheckAllCompany = "0";
                    if (document.getElementById('CheckAllCompany').checked == true) {
                        CheckAllCompany = "1";
                    }

                    var ChkExchange = "0";
                    if (document.getElementById('ChkExchange').checked == true) {
                        ChkExchange = "1";
                    }
                    var Chkdeposit = "0";
                    if (document.getElementById('Chkdeposit').checked == true) {
                        Chkdeposit = "1";
                    }
                    var chkInStNR = "0";
                    if (document.getElementById('chkInStNR').checked == true) {
                        chkInStNR = "1";
                    }
                    var chkDetails = "0";
                    if (document.getElementById('chkDetails').checked == true) {
                        chkDetails = "1";
                    }

                    var chkDPBalances = "0";
                    if (document.getElementById('chkDPBalances').checked == true) {
                        chkDPBalances = "1";
                    }
                    var chkShowLedger = "0";
                    if (document.getElementById('chkShowLedger').checked == true) {
                        chkShowLedger = "1";
                    }
                    var chkExecuted = "0";
                    if (document.getElementById('chkExecuted').checked == true) {
                        chkExecuted = "1";
                    }





                    var cmbActType = $('#cmbActType').val();
                    cmbActType = cmbActType.toString().trim();

                    var ChkBranchWise = $('#ChkBranchWise').val();
                    ChkBranchWise = ChkBranchWise.toString().trim();

                    var display;
                    display = 'HOLDING STATMENT [' + DT + ']'



                    $.ajax({
                        type: "GET",
                        url: '@Url.Action("holdingReport", "Report")',
                        dataType: "html",
                        data: { 'cmbSelect': $("#cmbSelect").val(), 'strClient': Code, 'ChkExchange': ChkExchange, 'Chkdeposit': Chkdeposit, 'chkInStNR': chkInStNR, 'CheckAllCompany': CheckAllCompany, 'chkDetails': chkDetails, 'chkDPBalances': chkDPBalances, 'chkShowLedger': chkShowLedger, 'DT': DT, 'cmbActType': cmbActType, 'ledgerBalDate': ledgerBalDate, 'ChkBranchWise': ChkBranchWise, 'chkExecuted': chkExecuted },
                        contentType: "application/html; charset=utf-8",
                        beforeSend: function () {
                            $("#btnFetch").attr("disabled", true);
                            $('#divModalProgress').modal('show');
                            $('#divSaveReport').hide();
                        },
                        success: function (response) {
                            $('#divReportPanelHeader').html(display);
                            $('#divReportPanelBody').html(response);
                            $('#divReportPanel').show();
                            $("#btnFetch").attr("disabled", false);
                        },
                        complete: function () {
                            $('#divModalProgress').modal('hide');
                            $('#divSaveReport').show();
                        },
                        failure: function (response) {
                            alert(response.responseText);
                        },
                        error: function (response) {
                            alert(response.responseText);
                        }
                    });

                },
                complete: function () {
                    event.preventDefault();

                },
                error: function (xhr, httpStatusMessage, customErrorMessage) {
                    if (xhr.status === 410) {
                        alert(customErrorMessage);
                    }
                }
            });
        });
    </script>

}



