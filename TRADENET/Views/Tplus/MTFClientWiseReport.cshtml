        $(function () {
            $("#cmbSelectReport").change(function () {
                var category = $('option:selected', this).text(); // Here we can get the value of selected item
                if (category == "Client Wise") {
                    $('#cmbSelectGroupBy').empty();
                    $('#cmbSelectGroupBy').append(new Option('None', 'None'));
                    $('#cmbSelectGroupBy').append(new Option('Scrip', 'Scrip'));

                }
                else if (category == "Scrip Wise") {
                    $('#cmbSelectGroupBy').empty();

                    $('#cmbSelectGroupBy').append(new Option('None', 'None'));
