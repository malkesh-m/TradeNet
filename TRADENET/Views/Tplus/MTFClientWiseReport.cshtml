<div id="divModalProgress" class="modal" style="display: none">
    <div class="center">
        <img alt="" src="~/img/loader.gif" />
    </div>
</div>
<div class="container-fluid row-no-gutters">
    <div class="row" align="center">
        <div class="col-lg-2 col-md-2 col-sm-2">
        </div>
        <div class="col-lg-8 col-md-8 col-sm-8">
            <div class="panel-group" role="tablist" aria-multiselectable="true">
                <div class="panel panel-info">
                    <div id="divProfitLossHead" style="height: 28px;padding:6px; font-family:Verdana; font-size:12px; font-weight:800; text-align:center" class="panel-heading ledgerhead">
                        <a href="#"><strong>CLIENT WISE/SCRIP WISE REPORT(MTF)</strong></a>
                    </div>
                    <div align="center" id="divProfitLossSelect" class="panel-body ledgerbody">
                        <form class="form-horizontal" action="" method="post">
                            <div class="form-group  row-no-gutters">
                                <div align="right" class="col-sm-1">
                                    As On :
                                </div>
                                <div align="right" class="col-sm-2" style="margin: 0 0 0 0.9%;">

                                    <div class='input-group'>
                                        <input type="text" class="form-control input-sm" id="dateBulk">
                                        <label class="input-group-addon btn" for="date">
                                            <span class="fa fa-calendar  open-datetimepicker" style="margin-left: -7px;margin-right: -3px;"></span>
                                        </label>
                                    </div>
                                </div>
                                <div align="right" class="col-md-1" style="width: 9.5%;">
                                    For :
                                </div>
                                <div align="left" class="col-md-1" style="margin: 0 0 0 0.9%;width:13.5%">
                                    @*@{ Html.RenderPartial("_SelectComboBox"); }*@
                                    <select id='cmbSelect' class="form-control input-sm">
                                        <option value='ALL'>All</option>
                                        <option value='CL'>Client</option>
                                        <option value='GR'>Group</option>
                                        <option value='SB'>Sub-Broker</option>
                                        <option value='FM'>Family</option>
                                        <option value='BR'>Branch</option>
                                    </select>
                                </div>
                                <div align="left" class="col-md-3" style="margin: 0 0 0 0.9%;">
                                    @*@{ Html.RenderPartial("_SearchClientTextBox"); }*@
                                    <input type="text" style="visibility:hidden;" class="form-control input-sm" id="txtSearchbyName" autocomplete="off" placeholder="Search Client" list="ClientMasterSearch" required>
                                    <datalist id="ClientMasterSearch"></datalist>
                                </div>
                            </div>
                            <div class="form-group row-no-gutters">

                                <div align="right" class="col-md-1">
                                    Report :
                                </div>

                                <div id="divseg" align="left" class="col-md-2" style="margin: 0 0 0 0.9%;">
                                    <select id='cmbSelectReport' class="form-control input-sm">
                                        <option selected="selected" value='C'>Client Wise</option>
                                        <option value='S'>Scrip Wise</option>

                                    </select>
                                </div>

                                <div align="right" class="col-md-1" style="width: 9.5%;" >
                                    Group By  :
                                </div>

                                <div id="divseg" align="left" class="col-md-2" style="margin: 0 0 0 0.9%;width:13.5%">
                                    <select id='cmbSelectGroupBy' class="form-control input-sm"></select>
                                </div>

                                <div align="right" class="col-md-4">
                                </div>
                                <div align="right" class="col-md-1">
                                    <input type="submit" class="btn btn-primary" style="margin-left: 25px;" id="btnFetch" value="Fetch" />
                                </div>

                            </div>

                        </form>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-2 col-md-2 col-sm-2">

        </div>
    </div>
    <div class="row collapse" align="center" id="divReportPanel">
        <div class="col-lg-2 col-md-2">
        </div>
        <div class="col-lg-8 col-md-8">
            <div class="panel panel-info">
                <div id="divReportPanelHeader" style="height: 28px;padding:6px; font-family:Verdana; font-size:12px; font-weight:800; text-align:center" class="panel-heading">
                    MTF Client Wise/Scrip Wise Report
                </div>
                <div id="divReportPanelBody" class="panel-body">

                </div>
            </div>
        </div>
        <div class="col-lg-2 col-md-2">
        </div>
    </div>
</div>


