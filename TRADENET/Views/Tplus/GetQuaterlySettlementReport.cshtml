@model System.Data.DataTable
@using System.Data;

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Bill Printing</title>
    <link rel="stylesheet" href="~/Content/bootstrap.min.css">
    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <style>
        .rightalign {
            text-align: right;
        }

        .leftalign {
            text-align: left;
        }

        .centeralign {
            text-align: center;
        }

        tr td {
            padding: 4px !important;
            margin: 4px !important;
        }

        .GroupHeader {
            background: #4682B4;
            color: white;
        }

        .table {
            /*font-family: Verdana !important;
            font-size: 10px !important;
            border-collapse: collapse;
            border: 0.01em;
            border-color: #bce8f1;
            width: 100%;*/
            font-family: Verdana !important;
            font-size: 10px !important;
            border: 1px solid black;
            border-color: #4682B4;
            border-radius: 5px;
            border-collapse: separate;
            border-spacing: 0;
            max-width: calc(100% - 2em);
            margin: 1em auto;
            overflow: hidden;
            width: 100%;
        }

        tr:nth-child(even) {
            background-color: lightsteelblue;
        }
    </style>
</head>
<body>
    <div class="panel-body">

        @if (Model != null)
        {
            for (int i = 0; i < Model.Rows.Count; i++)
            {

                <table id="tblClient" class="table">
                    <tbody>
                        <tr>
                            <th colspan="4" style="background-color:#d9edf7; color:black" class="GroupHeader centeralign">
                                <strong>Periodic Settlement details</strong>
                            </th>
                        </tr>
                        <tr>
                            <td class="rightalign">code:</td>

                            <td class="leftalign">@Model.Rows[0]["cm_cd"].ToString()</td>
                            <td>&nbsp;</td>

                            <td>&nbsp;</td>
                        </tr>
                        <tr>
                            <td class="rightalign">Name:</td>

                            <td class="leftalign">@Model.Rows[0]["cm_name"].ToString()</td>
                            <td>&nbsp;</td>

                            <td>&nbsp;</td>
                        </tr>
                        <tr>
                            <td colspan="4" class="centeralign"><strong>Funds and Securities available:</strong></td>

                        </tr>
                        <tr>
                            <td class="rightalign">Ledger Bal:</td>

                            <td class="leftalign"></td>
                            <td class="rightalign">@String.Format("{0:0.00}", Model.Rows[0]["qs_ledbal"])</td>
                            <td class="leftalign"></td>
                        </tr>
                        <tr>
                            <td class="rightalign"> Ledger Bal (M):</td>

                            <td class="leftalign"></td>
                            <td class="rightalign">@String.Format("{0:0.00}", Model.Rows[0]["qs_ledbalM"])</td>
                            <td class="leftalign"></td>
                        </tr>
                        <tr>
                            <td class="rightalign"> Value of Securites:</td>

                            <td class="leftalign"></td>
                            <td class="rightalign">@String.Format("{0:0.00}", Model.Rows[0]["qs_TotalShares"])</td>
                            <td class="leftalign"></td>
                        </tr>
                        <tr>
                            <td class="rightalign"> Total:</td>

                            <td class="leftalign"></td>
                            <td class="rightalign">@String.Format("{0:0.00}", Model.Rows[0]["qs_TotalFundShare"])</td>
                            <td class="leftalign"></td>
                        </tr>
                        <tr>
                            <td colspan="4" class="centeralign"><strong>Maximum Funds and Securities that can be retained</strong></td>

                        </tr>
                        <tr>
                            <td class="rightalign"> Total Retain:</td>

                            <td class="leftalign"></td>
                            <td class="rightalign">@String.Format("{0:0.00}", Model.Rows[0]["qs_TotalRetain"])</td>
                            <td class="leftalign"></td>
                        </tr>
                        <tr>
                            <td colspan="4" class="centeralign"><strong>Retention of Funds and Securities (Value)</strong></td>

                        </tr>
                        <tr>
                            <td class="rightalign"> Funds:</td>

                            <td class="leftalign"></td>
                            <td class="rightalign">@String.Format("{0:0.00}", Model.Rows[0]["qs_ReleaseFund"])</td>
                            <td class="leftalign"></td>
                        </tr>
                        <tr>
                            <td class="rightalign"> Securities:</td>

                            <td class="leftalign"></td>
                            <td class="rightalign">@String.Format("{0:0.00}", Model.Rows[0]["qs_ReleaseShares"])</td>
                            <td class="leftalign"></td>
                        </tr>
                        <tr>
                            <td class="rightalign"> Total:</td>

                            <td class="leftalign"></td>
                            <td class="rightalign">@String.Format("{0:0.00}", Model.Rows[0]["qs_TotalRelease"])</td>
                            <td class="leftalign"></td>
                        </tr>
                        <tr>
                            <td colspan="4" class="centeralign"><strong>Collateral</strong></td>

                        </tr>
                        <tr>
                            <td class="rightalign"> BG:</td>

                            <td class="leftalign"></td>
                            <td class="rightalign">@String.Format("{0:0.00}", Model.Rows[0]["qs_CollBG"])</td>
                            <td class="leftalign"></td>
                        </tr>
                        <tr>
                            <td class="rightalign"> FD:</td>

                            <td class="leftalign"></td>
                            <td class="rightalign">@String.Format("{0:0.00}", Model.Rows[0]["qs_CollFD"])</td>
                            <td class="leftalign"></td>
                        </tr>
                        <tr>
                            <td colspan="4" class="centeralign"><strong>Value of Securities</strong></td>

                        </tr>
                        <tr>
                            <td class="rightalign"> Share Collateral:</td>

                            <td class="leftalign"></td>
                            <td class="rightalign">@String.Format("{0:0.00}", Model.Rows[0]["qs_CollAfterH"])</td>
                            <td class="leftalign"></td>
                        </tr>
                        <tr>
                            <td class="rightalign">Beneficiary Holding:</td>

                            <td class="leftalign"></td>
                            <td class="rightalign">@String.Format("{0:0.00}", Model.Rows[0]["qs_BenfAfterH"])</td>
                            <td class="leftalign"></td>
                        </tr>
                        <tr>
                            <td colspan="4" class="rightalign"></td>

                        </tr>
                        <tr>
                            <td class="rightalign">Net Value:</td>

                            <td class="leftalign"></td>
                            <td class="rightalign">@String.Format("{0:0.00}", Model.Rows[0]["qs_Netvalue"])</td>
                            <td class="leftalign"></td>
                        </tr>

                    </tbody>
                </table>
                <br />
            }
        }
        else
        { <table id="tblClient" class="table">
            <tbody>
                <tr>
                    <th colspan="4" style="background-color:#d9edf7; color:black" class="GroupHeader centeralign">
                        <strong>Info!</strong> NO RECORDS FOUND
                    </th>
                </tr>
            </tbody>
        </table>
        }



    </div>
</body>
</html>
